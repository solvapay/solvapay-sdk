# SolvaPay Configuration
# Copy this file to .env.local and fill in your values

# SolvaPay Secret Key (keep this secret - never commit to git)
# Get this from your SolvaPay dashboard
SOLVAPAY_SECRET_KEY=sp_sandbox_your_secret_key_here

# SolvaPay API Base URL (optional)
# Default: https://api.solvapay.com
# For local development: http://localhost:3001
SOLVAPAY_API_BASE_URL=https://api.solvapay.com

# Agent Reference (get this from your SolvaPay dashboard)
# This is public and can be exposed to the browser
NEXT_PUBLIC_AGENT_REF=agt_your_agent_ref

# SolvaPay Hosted OAuth Configuration
# Get these from your SolvaPay Dashboard -> Developers -> OAuth Apps
SOLVAPAY_CLIENT_ID=your_client_id
SOLVAPAY_CLIENT_SECRET=your_client_secret
SOLVAPAY_AUTH_URL=https://api.solvapay.com/v1/oauth/authorize
SOLVAPAY_TOKEN_URL=https://api.solvapay.com/v1/oauth/token
SOLVAPAY_USERINFO_URL=https://api.solvapay.com/v1/oauth/userinfo

# SolvaPay Frontend URL (for the "Open SolvaPay Console" link)
SOLVAPAY_FRONTEND_URL=http://localhost:3000

# App URL (for redirects)
PUBLIC_URL=http://localhost:3000

# Supabase Configuration (Optional - for local data storage only)
# If you are not syncing data to local DB, you can remove these.
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_DB_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres
