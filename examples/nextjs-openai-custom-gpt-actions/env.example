# SolvaPay Configuration
# Copy this file to .env.local and fill in your values

# SolvaPay Secret Key (keep this secret - never commit to git)
# Get this from your SolvaPay dashboard
SOLVAPAY_SECRET_KEY=sp_sandbox_your_secret_key_here

# SolvaPay API Base URL (optional)
# Default: https://api-dev.solvapay.com
# For local development: http://localhost:3001
SOLVAPAY_API_BASE_URL=https://api-dev.solvapay.com

# Agent Reference (get this from your SolvaPay dashboard)
# This is public and can be exposed to the browser
NEXT_PUBLIC_AGENT_REF=agt_your_agent_ref

# Supabase Configuration
# Get these from your Supabase project dashboard: https://supabase.com/dashboard

# Supabase Project URL (for client-side auth)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anon Key (for client-side auth)
# Get this from: Supabase Dashboard → Settings → API → Project API keys → anon/public
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase JWT Secret (for server-side token verification)
# Get this from: Supabase Dashboard → Settings → API → JWT Secret
# This is used by the server to verify JWT tokens from the client
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# OAuth Configuration (for OpenAI Custom GPT Actions)
# These are used for OAuth token generation and verification
OAUTH_ISSUER=https://your-domain.com
OAUTH_JWKS_SECRET=your_jwks_secret_here
OAUTH_CLIENT_ID=your_client_id_here

