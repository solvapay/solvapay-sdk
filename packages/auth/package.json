{
  "name": "@solvapay/auth",
  "version": "1.0.0-preview.18",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./supabase": {
      "types": "./dist/supabase.d.ts",
      "import": "./dist/supabase.js",
      "require": "./dist/supabase.cjs"
    },
    "./mock": {
      "types": "./dist/mock.d.ts",
      "import": "./dist/mock.js",
      "require": "./dist/mock.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/solvapay/solvapay-sdk.git",
    "directory": "packages/auth"
  },
  "engines": {
    "node": ">=18.17"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts src/supabase.ts src/mock.ts src/next-utils.ts --format esm,cjs --dts --tsconfig tsconfig.build.json",
    "test": "vitest run || exit 0",
    "test:watch": "vitest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "peerDependencies": {
    "jose": "^5.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.5.4",
    "vitest": "^4.0.8"
  }
}
