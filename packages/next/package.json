{
  "name": "@solvapay/next",
  "version": "1.0.0-preview.6",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/solvapay/solvapay-sdk.git",
    "directory": "packages/next"
  },
  "engines": {
    "node": ">=18.17"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --tsconfig tsconfig.build.json --external next",
    "test": "vitest run || exit 0",
    "test:watch": "vitest",
    "lint": "echo 'no lint yet'"
  },
  "dependencies": {
    "@solvapay/auth": "workspace:*",
    "@solvapay/core": "workspace:*",
    "@solvapay/server": "workspace:*"
  },
  "peerDependencies": {
    "next": ">=13.0.0"
  },
  "devDependencies": {
    "@solvapay/test-utils": "workspace:*",
    "next": "^14.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}

