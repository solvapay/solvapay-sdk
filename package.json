{
  "name": "solvapay-sdk-monorepo",
  "version": "1.0.0",
  "description": "A modern TypeScript SDK for monetizing APIs, AI agents, and MCP servers with paywall protection and subscription management",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/solvapay/solvapay-sdk.git"
  },
  "homepage": "https://github.com/solvapay/solvapay-sdk#readme",
  "bugs": {
    "url": "https://github.com/solvapay/solvapay-sdk/issues"
  },
  "keywords": [
    "solvapay",
    "sdk",
    "typescript",
    "paywall",
    "subscription",
    "payment",
    "monetization",
    "api",
    "mcp",
    "nextjs",
    "react",
    "express"
  ],
  "author": "SolvaPay Inc.",
  "license": "MIT",
  "scripts": {
    "build": "turbo build --concurrency 16",
    "build:examples": "turbo build --filter=@example/*",
    "build:packages": "turbo build --filter=@solvapay/*",
    "clean": "turbo clean",
    "dev": "turbo dev --no-cache --concurrency 16 --continue",
    "test": "turbo run test --filter=!@example/*",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\" --ignore-path .prettierignore",
    "type-check": "tsc --build",
    "type-check:full": "tsc --build tsconfig.with-examples.json",
    "release": "turbo run release",
    "version:bump": "tsx scripts/version-bump.ts",
    "version:bump:minor": "tsx scripts/version-bump.ts minor",
    "version:bump:major": "tsx scripts/version-bump.ts major",
    "version:bump:preview": "tsx scripts/version-bump-preview.ts",
    "test:publish": "tsx scripts/test-publish.ts",
    "publish:packages": "pnpm --filter=@solvapay/* --filter=create-solvapay-app publish --access public --no-git-checks --no-provenance",
    "publish:preview": "pnpm --filter=@solvapay/* --filter=create-solvapay-app publish --tag preview --access public --no-git-checks --no-provenance",
    "publish:preview:dry-run": "pnpm --filter=@solvapay/* --filter=create-solvapay-app publish --tag preview --access public --no-git-checks --no-provenance --dry-run",
    "tag:latest": "tsx scripts/tag-as-latest.ts",
    "docs:build": "rm -rf docs/api && typedoc",
    "docs:watch": "typedoc --watch",
    "docs:check": "typedoc --json docs/api.json",
    "docs:validate-links": "tsx scripts/validate-doc-links.ts",
    "docs:validate": "pnpm docs:validate-links && pnpm docs:check && pnpm docs:build"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@eslint/js": "^9.0.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "@types/react": "^18.2.79",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "fastify": "^4.28.1",
    "glob": "^11.0.3",
    "jose": "^5.9.3",
    "nodemon": "^3.1.0",
    "prettier": "^3.6.2",
    "tsup": "^8.0.1",
    "tsx": "^4.19.0",
    "turbo": "^2.0.6",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.5",
    "zod": "^3.23.8"
  }
}
